{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["wechat-miniprogram"], // 确保引用微信小程序类型声明
      "baseUrl": "./",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "exclude": ["node_modules"],
    "include": ["miniprogram/**/*"]
  }
  