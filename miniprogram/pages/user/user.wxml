<!-- pages/user/user.wxml -->
<view class="container">
  <navigation-bar title="用户中心"></navigation-bar>

  <!-- 用户信息展示 -->
  <view class="user-info">
    <image class="avatar" src="{{userInfo.avatarUrl}}" />
    <text class="nickname">{{userInfo.nickName}}</text>
    <text class="phone">手机号：{{userInfo.phone}}</text>
  </view>

  <!-- 用户参与的项目列表 -->
  <view class="projects-section">
    <text class="section-title">我参与的项目</text>
    <block wx:for="{{projects}}" wx:key="id">
      <view class="project-item" bindtap="goToProject" data-id="{{item.id}}">
        <text class="project-title">{{item.name}}</text>
        <text class="project-status">状态：{{item.status}}</text>
      </view>
    </block>
    <view wx:if="{{projects.length === 0}}" class="no-projects">
      <text>您还未参与任何项目</text>
    </view>
  </view>

  <!-- 退出登录按钮 -->
  <button class="logout-button" bindtap="logout">退出登录</button>
</view>
