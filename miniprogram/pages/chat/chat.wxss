/* pages/chat/chat.wxss */
.chat-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
  }
  
  .message-list {
    flex: 1;
    padding: 20rpx;
    background-color: #f5f5f5;
  }
  
  .message-item {
    display: flex;
    margin-bottom: 20rpx;
  }
  
  .message-item.self {
    justify-content: flex-end;
  }
  
  .message-item.other {
    justify-content: flex-start;
  }
  
  .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin: 0 10rpx;
  }
  
  .message-content {
    max-width: 70%;
    padding: 15rpx;
    border-radius: 10rpx;
    background-color: #ffffff;
    position: relative;
  }
  
  .message-item.self .message-content {
    background-color: #DCF8C6;
  }
  
  .sender-name {
    font-size: 24rpx;
    font-weight: bold;
    margin-bottom: 5rpx;
  }
  
  .content {
    font-size: 24rpx;
  }
  
  .timestamp {
    font-size: 20rpx;
    color: #999999;
    position: absolute;
    bottom: 5rpx;
    right: 10rpx;
  }
  
  .input-bar {
    display: flex;
    padding: 20rpx;
    border-top: 1rpx solid #ccc;
    background-color: #ffffff;
  }
  
  .input-bar input {
    flex: 1;
    padding: 15rpx;
    border: 1rpx solid #ccc;
    border-radius: 30rpx;
    font-size: 28rpx;
  }
  
  .input-bar button {
    margin-left: 20rpx;
    padding: 15rpx 30rpx;
    background-color: #1AAD19;
    color: white;
    border: none;
    border-radius: 30rpx;
    font-size: 28rpx;
  }
  