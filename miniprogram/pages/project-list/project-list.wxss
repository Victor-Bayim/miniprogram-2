/* pages/project-list/project-list.wxss */
.container {
    padding: 20rpx;
    background-color: #ffffff;
  }
  
  .search-bar {
    display: flex;
    margin-bottom: 20rpx;
  }
  
  .search-bar input {
    flex: 1;
    padding: 10rpx;
    border: 1rpx solid #ccc;
    border-radius: 5rpx;
    font-size: 28rpx;
  }
  
  .search-bar button {
    margin-left: 10rpx;
    padding: 10rpx 20rpx;
    background-color: #1AAD19;
    color: white;
    border: none;
    border-radius: 5rpx;
    font-size: 28rpx;
  }
  
  .filter-bar {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
  }
  
  .picker {
    padding: 10rpx;
    border: 1rpx solid #ccc;
    border-radius: 5rpx;
    font-size: 28rpx;
    flex: 1;
    text-align: center;
  }
  
  .picker:first-child {
    margin-right: 10rpx;
  }
  
  .project-list {
    display: flex;
    flex-direction: column;
  }
  
  .project-item {
    padding: 20rpx;
    border: 1rpx solid #ccc;
    border-radius: 5rpx;
    margin-bottom: 20rpx;
    background-color: #f9f9f9;
  }
  
  .project-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .project-desc {
    font-size: 28rpx;
    color: #555555;
    margin-bottom: 10rpx;
  }
  
  .project-details, .project-status {
    font-size: 26rpx;
    color: #333333;
  }
  
  .no-projects {
    text-align: center;
    font-size: 28rpx;
    color: #888888;
    margin-top: 50rpx;
  }
  