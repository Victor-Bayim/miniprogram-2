<!-- pages/project-list/project-list.wxml -->
<view class="container">
  <navigation-bar title="项目列表"></navigation-bar>

  <!-- 搜索栏 -->
  <view class="search-bar">
    <input type="text" placeholder="搜索项目" bindinput="onSearchInput" value="{{searchKeyword}}" />
    <button bindtap="onSearch">搜索</button>
  </view>

  <!-- 筛选栏 -->
  <view class="filter-bar">
    <picker mode="selector" range="{{categories}}" bindchange="onCategoryChange">
      <view class="picker">
        分类: {{selectedCategory}}
      </view>
    </picker>
    <picker mode="selector" range="{{durations}}" bindchange="onDurationChange">
      <view class="picker">
        时长: {{selectedDuration}}
      </view>
    </picker>
  </view>

  <!-- 项目列表 -->
  <view class="project-list">
    <block wx:for="{{projects}}" wx:key="id">
      <view class="project-item" bindtap="goToProject" data-id="{{item.id}}">
        <text class="project-title">{{item.name}}</text>
        <text class="project-desc">{{item.description}}</text>
        <text class="project-details">所需技能：{{item.skills.join(', ')}}</text>
        <text class="project-status">时长：{{item.duration}} 天</text>
      </view>
    </block>
    <view wx:if="{{projects.length === 0}}" class="no-projects">
      <text>暂无项目</text>
    </view>
  </view>
</view>
