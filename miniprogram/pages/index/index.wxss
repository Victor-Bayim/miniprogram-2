/* pages/index/index.wxss */
.container {
    padding: 20rpx;
  }
  
  .header {
    font-size: 36rpx;
    text-align: center;
    margin-bottom: 20rpx;
  }
  
  .project-list {
    margin-bottom: 20rpx;
  }
  
  .project-item {
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
    background-color: #ffffff;
    border-radius: 5rpx;
    margin-bottom: 10rpx;
  }
  
  .project-title {
    font-size: 28rpx;
    font-weight: bold;
  }
  
  .project-desc {
    font-size: 24rpx;
    color: #555;
    margin-top: 5rpx;
  }
  
  .publish-button, .user-center-button {
    width: 100%;
    padding: 20rpx;
    background-color: #1AAD19;
    color: #ffffff;
    margin-top: 20rpx;
    border-radius: 5rpx;
    font-size: 28rpx;
  }
  