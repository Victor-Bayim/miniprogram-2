<!-- pages/login/login.wxml -->
<view class="container">
  <image src="../../images/logo.png" class="logo"></image>

  <view class="input-group">
    <input type="text" placeholder="请输入手机号" bindinput="onPhoneInput" value="{{phone}}" />
  </view>

  <view class="input-group">
    <input type="text" placeholder="请输入验证码" bindinput="onCodeInput" value="{{code}}" />
    <button class="get-code-button" bindtap="getCode" disabled="{{!canGetCode}}">
      {{canGetCode ? '获取验证码' : countdown + 's'}}
    </button>
  </view>

  <button class="login-button" bindtap="login">登录</button>

  <button class="wechat-button" open-type="getUserInfo" bindgetuserinfo="wechatLogin">微信授权登录</button>
</view>
